                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </StackPane.margin>
                   </ImageView>
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </StackPane>
   </top>
   <bottom>
      <StackPane BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#refresh" text="RafraÃ®chir" StackPane.alignment="CENTER_LEFT">
